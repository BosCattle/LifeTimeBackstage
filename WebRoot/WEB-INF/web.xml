<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
  <servlet>
    <servlet-name>WelcomeServlet</servlet-name>
    <display-name>欢迎界面图片的加载</display-name>
    <description>欢迎界面图片的加载</description>
    <servlet-class>org.jiangtao.lifetime.servlet.WelcomeServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SendValidate</servlet-name>
    <display-name>发送验证码</display-name>
    <description>发送验证码</description>
    <servlet-class>org.jiangtao.lifetime.servlet.register.SendValidate</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RegisterInformationServlet</servlet-name>
    <display-name>发送注册基本信息</display-name>
    <description>发送注册基本信息</description>
    <servlet-class>org.jiangtao.lifetime.servlet.register.RegisterInformationServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RegisterHeadImageServlet</servlet-name>
    <display-name>用户选择头像</display-name>
    <description>用户选择头像</description>
    <servlet-class>org.jiangtao.lifetime.servlet.register.RegisterHeadImageServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GetUserImageServlet</servlet-name>
    <display-name>获取用户头像</display-name>
    <description>获取用户头像</description>
    <servlet-class>org.jiangtao.lifetime.servlet.login.GetUserImageServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LoginRequest</servlet-name>
    <display-name>获取用户头像</display-name>
    <description>获取用户头像</description>
    <servlet-class>org.jiangtao.lifetime.servlet.login.LoginRequest</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RetrievePasswordResuest</servlet-name>
    <display-name>找回密码</display-name>
    <description>找回密码</description>
    <servlet-class>org.jiangtao.lifetime.servlet.login.RetrievePasswordResuest</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UploadImageArticleUrlServlet</servlet-name>
    <display-name>上传文章信息1</display-name>
    <description>上传文章信息1</description>
    <servlet-class>org.jiangtao.lifetime.article.UploadImageArticleUrlServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GetAllArticle</servlet-name>
    <display-name>获取所有文章信息</display-name>
    <description>获取所有文章信息</description>
    <servlet-class>org.jiangtao.lifetime.article.GetAllArticle</servlet-class>
  </servlet>












  <servlet-mapping>
    <servlet-name>WelcomeServlet</servlet-name>
    <url-pattern>/welcome.action</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SendValidate</servlet-name>
    <url-pattern>/sendvalidate.action</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RegisterInformationServlet</servlet-name>
    <url-pattern>/registerinformation.action</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RegisterHeadImageServlet</servlet-name>
    <url-pattern>/registerImage.action</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GetUserImageServlet</servlet-name>
    <url-pattern>/headImage.action</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginRequest</servlet-name>
    <url-pattern>/loginRequest.action</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RetrievePasswordResuest</servlet-name>
    <url-pattern>/retrievePassword.action</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UploadImageArticleUrlServlet</servlet-name>
    <url-pattern>/uploadImageArticleUrl.action</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GetAllArticle</servlet-name>
    <url-pattern>/getAllArticle.action</url-pattern>
  </servlet-mapping>

</web-app>